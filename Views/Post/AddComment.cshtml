@using Microsoft.AspNetCore.Identity
@{
    ViewData["Title"] = "Add Comment";
}

<h2>Add a Comment</h2>

<form asp-action="AddComment" method="post">
    <input type="hidden" name="postId" value="@ViewData["PostId"]" />

    <div class="form-group">
        <label for="userId">Select User</label>
        <select name="userId" class="form-control" required>
            <option value="">Select a user</option>
            @foreach (var user in (IEnumerable<IdentityUser>)ViewData["Users"])
            {
                <option value="@user.Id">@user.UserName</option>
            }
        </select>
    </div>

    <div class="form-group">
        <label for="text">Comment</label>
        <textarea name="text" placeholder="Add a comment" required class="form-control"></textarea>
    </div>

    <button type="submit" class="btn btn-primary">Submit Comment</button>
    <a asp-action="Details" asp-controller="Post" asp-route-id="@ViewData["PostId"]" class="btn btn-secondary">Cancel</a>
</form>
