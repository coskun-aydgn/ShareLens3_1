@model Post
<div class="post-container">
    <div class="post-card">
        <!-- Delete Button Positioned in Top-Left Corner -->

        <a type="submit" asp-action="Delete" asp-route-id="@Model.PostId" method="post" class="delete-btn"
            style="text-decoration=none; position:absolute; top:10px; right:10px;">
            &times; <!-- X icon for delete -->
        </a>


        <!-- Kart覺n kendisi, t覺klan覺nca detay sayfas覺na gider -->
        <a asp-controller="Post" asp-action="Details" asp-route-id="@Model.PostId" class="post-card-link"
            style="text-decoration:none">
            <div class="post-resim">
                <img src="@Model.ImageUrl" alt="@Model.Title">
            </div>
            <div class="post-yazi">
                <h5>@Model.Title</h5>
                <p>@Model.Description</p>
                <div class="post-info">
                    <div class="post-date">
                        <i class="icon calendar"></i> @Model.CreatedDate
                    </div>
                    <div class="post-likes">
                        <i class="icon heart"></i> @Model.LikeCount likes
                    </div>
                </div>
                <div class="post-buttons">
                    <form asp-action="AddLike" method="post">
                        <input type="hidden" name="postId" value="@Model.PostId" />
                        <input type="hidden" name="currentPage" value="@ViewContext.RouteData.Values["action"]" />
                        <button type="submit" class="post-details-btn">Like</button>
                    </form>
                    <!-- Yorum Ekleme Butonu -->
                    <a asp-controller="Post" asp-action="AddComment" asp-route-Id="@Model.PostId" class="comment-btn">
    Comment
</a>


                    <a class="update-btn" asp-action="Update" asp-route-id="@Model.PostId">
                        Update
                    </a>
                </div>
            </div>
        </a>
    </div>
</div>
